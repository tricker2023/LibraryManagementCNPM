<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ThanhToanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/body1"
        android:textAlignment="center">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:text="THANH TOÁN"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="@dimen/heading3" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/body1"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idthanhtoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Mã thanh toán"
                android:inputType="text"
                android:maxLength="50"
                android:textColorHint="@color/text"
                android:textSize="@dimen/body2" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/body1"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idsach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Mã sách"
                android:inputType="text"
                android:maxLength="10"
                android:textColorHint="@color/text"
                android:textSize="@dimen/body2" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/body1"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idmuonsach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Mã mượn sách"
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="@color/text"
                android:textSize="@dimen/body2" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/body1"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idtrasach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="60"
                android:hint="Mã trả sách"
                android:inputType="text"
                android:maxLength="10"
                android:textColorHint="@color/text"
                android:textSize="@dimen/body2" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/body1"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edttongngaymuon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="60"
                android:hint="Tổng ngày mượn"
                android:inputType="number"
                android:maxLength="10"
                android:textColorHint="@color/text"
                android:textSize="@dimen/body2" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/body1"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtthanhtoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Số tiền"
                android:inputType="number"
                android:maxLength="10"
                android:textColorHint="@color/text"
                android:textSize="@dimen/body2" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/body1"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtbosung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Lưu ý"
                android:inputType="textMultiLine"
                android:minLines="1"
                android:maxLength="500"
                android:textColorHint="@color/text"
                android:textSize="@dimen/body2" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btnnhapts"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/body1"
            android:background="@drawable/custom_button"
            android:hint="Nhập"
            android:textAlignment="center"
            android:textColorHint="#FFFFFF"
            android:textSize="25dp"
            app:backgroundTint="@null" />

    </LinearLayout>

</LinearLayout>