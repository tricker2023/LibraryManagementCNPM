<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".TraSachActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/body3">
        <ImageButton
            android:id="@+id/btnback"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#00000000"
            android:paddingLeft="@dimen/body1"
            android:paddingTop="@dimen/body4"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/chevron_left"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:text="TRẢ SÁCH"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:textSize="@dimen/heading3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/body1"
        android:textAlignment="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/body1"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtidtrasach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_input"
                    android:ems="10"
                    android:hint="Mã trả sách"
                    android:inputType="text"
                    android:maxLength="50"
                    android:textColorHint="@color/text"
                    android:textSize="@dimen/body2" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/body1"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edthotents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_input"
                    android:ems="10"
                    android:hint="Họ và tên"
                    android:inputType="text"
                    android:maxLength="50"
                    android:textColorHint="@color/text"
                    android:textSize="@dimen/body2" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/body1"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtlopts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_input"
                    android:ems="10"
                    android:hint="Lớp hành chính"
                    android:inputType="text"
                    android:maxLength="10"
                    android:textColorHint="@color/text"
                    android:textSize="@dimen/body2" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/body1"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtsdtts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_input"
                    android:ems="10"
                    android:hint="Số điện thoại"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColorHint="@color/text"
                    android:textSize="@dimen/body2" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/body1"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtgmailts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_input"
                    android:ems="60"
                    android:hint="Gmail"
                    android:inputType="text"
                    android:maxLength="50"
                    android:textColorHint="@color/text"
                    android:textSize="@dimen/body2" />
            </com.google.android.material.textfield.TextInputLayout>
<!--            Code tạo text view để chuyển đổi ngày tháng của trả sách-->
                    <TextView
                        android:id="@+id/edtngaymuonts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/body1"
                        android:background="@drawable/background_input"
                        android:drawableEnd="@drawable/datetime"
                        android:text="Ngày đăng ký mượn sách"
                        android:textSize="@dimen/body2" />
                    <TextView
                        android:id="@+id/edtngaytra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/body1"
                        android:background="@drawable/background_input"
                        android:drawableEnd="@drawable/datetime"
                        android:text="Ngày trả sách"
                        android:textSize="@dimen/body2" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/body1"
                app:hintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtthanhtoants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_input"
                    android:ems="10"
                    android:hint="Thanh toán"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColorHint="@color/text"
                    android:textSize="@dimen/body2" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnnhapts"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/body1"
                android:background="@drawable/custom_button"
                android:hint="Nhập"
                android:textAlignment="center"
                android:textColorHint="#FFFFFF"
                android:textSize="25dp"
                app:backgroundTint="@null" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>